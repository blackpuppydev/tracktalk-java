<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/setting"
        android:layout_width="57dp"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:src="@drawable/ic_settingtracktalk" />


<!--    <LinearLayout-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="81dp"-->
<!--        android:layout_above="@+id/voice"-->

<!--        android:layout_alignParentTop="true"-->
<!--        android:layout_alignParentEnd="true"-->
<!--        android:layout_marginTop="0dp"-->
<!--        android:layout_marginEnd="-5dp"-->
<!--        android:layout_marginBottom="105dp"-->
<!--        android:orientation="horizontal">-->


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="91dp"
        android:src="@drawable/tracktalkheader" />

    <ImageButton
            android:id="@+id/notichallenge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="click"
            android:background="#FFFFFF" />

<!--    </LinearLayout>-->

    <ImageView
        android:id="@+id/voice"
        android:layout_width="230dp"
        android:layout_height="217dp"
        android:layout_above="@+id/swicthactive"
        android:layout_alignStart="@+id/swicthactive"
        android:layout_alignEnd="@+id/swicthactive"
        android:layout_marginStart="-86dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="-90dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/talkinghead04" />

    <Switch
        android:id="@+id/swicthactive"
        android:layout_width="98dp"
        android:layout_height="46dp"
        android:layout_above="@+id/slideonoff"
        android:layout_alignStart="@+id/slideonoff"
        android:layout_alignEnd="@+id/slideonoff"
        android:layout_marginStart="64dp"
        android:layout_marginEnd="62dp"
        android:layout_marginBottom="15dp"
        android:layout_centerInParent="true"
        android:checked="false"
        android:theme="@style/SCBSwitch" />

    <TextView
        android:id="@+id/slideonoff"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:layout_above="@+id/addschedule"
        android:layout_alignStart="@+id/addschedule"
        android:layout_alignEnd="@+id/addschedule"
        android:layout_marginStart="9dp"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/kanitlightitalic"
        android:text="Slide to open tracking mode."
        android:textAlignment="center"
        android:textColor="#024C6A"
        android:textSize="10dp" />

    <Button
        android:id="@+id/addschedule"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_above="@+id/settime"
        android:layout_alignStart="@+id/settime"
        android:layout_alignEnd="@+id/settime"
        android:layout_marginStart="3dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="26dp"
        android:background="@drawable/buttonshape7"
        android:fontFamily="@font/kanitlight"
        android:text="Add scheduler"
        android:textColor="#FFFFFF"
        android:textSize="13dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/settime"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_above="@+id/checkactivity"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="57dp"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/buttonshape7"
        android:fontFamily="@font/kanitlight"
        android:text="see result of time"
        android:textColor="#FFFFFF"
        android:textSize="13dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/checkactivity"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="55dp"
        android:layout_marginEnd="54dp"
        android:layout_marginBottom="62dp"
        android:background="@drawable/buttonshape6"
        android:fontFamily="@font/kanitlight"
        android:text="Check your activity"
        android:textColor="#ededed"
        android:textSize="13dp"
        android:textStyle="bold" />


</RelativeLayout>