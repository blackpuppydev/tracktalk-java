<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <LinearLayout
        android:layout_width="261dp"
        android:layout_height="321dp"
        android:background="@drawable/addsched"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/kanitregular"
            android:text="Add scheduler"
            android:textAlignment="center"
            android:textColor="#180266"
            android:textSize="17dp"
            android:textStyle="bold" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/kanitlight"
            android:text="Start time"
            android:textAlignment="center"
            android:textColor="#024C6A"
            android:textSize="14dp" />

        <Button
            android:id="@+id/starttime"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="146dp"
            android:layout_height="30dp"
            android:layout_marginLeft="55dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/buttonshape10"
            android:fontFamily="@font/kanitlightitalic"
            android:gravity="center"
            android:text="start"
            android:textSize="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/kanitlight"
            android:text="Stop time"
            android:textAlignment="center"
            android:textColor="#024C6A"
            android:textSize="14dp" />

        <Button
            android:id="@+id/stoptime"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="146dp"
            android:layout_height="30dp"
            android:layout_marginLeft="55dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/buttonshape10"
            android:fontFamily="@font/kanitlightitalic"
            android:text="stop"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/setagian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/kanitlightitalic"
            android:textAlignment="center"
            android:textColor="#E10000"
            android:textSize="11dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">


            <Button
                android:id="@+id/btnaddscheduler"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="98dp"
                android:layout_height="22dp"
                android:layout_marginLeft="80dp"
                android:background="@drawable/buttonshape6"
                android:fontFamily="@font/kanitlight"
                android:text="ok"
                android:textColor="#FFFFFF"
                android:textSize="10dp" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
